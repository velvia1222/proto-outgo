#:kivy 1.8.0

#:import Window kivy.core.window.Window

#:set col_number 3
#:set row_number 7

OutgoRoot

<OutgoRoot>:
    carousel: carousel
    input_widget: input_widget
    list_widget: list_widget

    Carousel:
        id: carousel
        width: Window.width
        height: Window.height
        loop: True
        InputWidget:
            id: input_widget
            model: app.outgo_model
        ListWidget:
            id: list_widget

<InputWidget>:
    orientation: "vertical"

    number_display: number_display
    category_spinner: category_spinner
    target_y: target_y
    target_n: target_n

    TextInput:
        id: number_display
        size_hint_y: 1 / row_number
        text_size: self.size
        font_size: 36
        text: ''

    BoxLayout:
        orientation: "horizontal"
        size_hint_y: 1 / row_number

        TargetButton:
            id: target_y
            size_hint_x: 1 / 3
            text: 'y'
            state: 'down'
            on_press: root.select_y()

        Spinner:
            id: category_spinner
            size_hint_x: 2 / 3
            font_size: 36
            text_autoupdate: True
            values: root.build_category()

    BoxLayout:
        orientation: "horizontal"
        size_hint_y: 1 / row_number

        TargetButton:
            id: target_n
            text: 'n'
            on_press: root.select_n()

        NumberButton:
            text: '0'

        InputButton:
            id: number_btn_bs
            text: 'BS'
            on_press: root.backspace()

    GridLayout:
        cols: 3
        rows: 4
        size_hint_y: 3 / row_number

        NumberButton:
            text: '1'

        NumberButton:
            text: '2'

        NumberButton:
            text: '3'

        NumberButton:
            text: '4'

        NumberButton:
            text: '5'

        NumberButton:
            text: '6'

        NumberButton:
            text: '7'

        NumberButton:
            text: '8'

        NumberButton:
            text: '9'

    BoxLayout:
        orientation: "horizontal"
        size_hint_y: 1 / row_number

        Button:
            text: 'Enter'
            font_size: 36
            on_press: root.enter(app.root.carousel, app.root.list_widget)

        Button:
            text: 'Cancel'
            font_size: 36
            on_press: root.cancel(app.root)

<ListWidget>:
    listview_widget: listview_widget
    orientation: "vertical"

    BoxLayout:
        orientation: "horizontal"
        size_hint_y: 1 / row_number

        Button:
            text: 'Select all'
            font_size: 24
            on_press: root.select_all()

        Button:
            text: 'Pay off'
            font_size: 24
            on_press: root.pay_off()

    ListViewWidget:
        id: listview_widget
        model: app.outgo_model
        adapter: self.build_adapter()

[ListItemWidget@SelectableView+BoxLayout]:
    list_item_label: list_item_label
    size_hint_y: None
    height: Window.height / row_number / 1.5

    ListItemLabelWidget:
        id: list_item_label
        text: self.print_item(ctx.data)
        text_size: self.size
        valign: 'middle'
        font_size: 18

    ListItemBtnWidget:
        text: 'Edit'
        selected_color: [0., 1., 0., 1]
        size_hint_x: 0.25
        font_size: 18
        on_press: self.move_to_input(app.root)

    ListItemBtnWidget:
        text: 'Del'
        selected_color: [0., 1., 0., 1]
        size_hint_x: 0.25
        font_size: 18
        on_press: self.move_to_input(app.root)

<ConfirmContent>:
    ConfirmLabel:
        top: root.height
        right: root.right / 2 - 10

<PopupButton@Button>:
    top: root.height / row_number + 55
    font_size: 24
    width: 140
    height: Window.height / row_number - 10

<ConfirmLabel@Label>:
    text: root.get_text()

<InputButton@Button>:
    font_size: 36

<NumberButton@InputButton>:
    on_press: app.root.input_widget.input_number(self)

<TargetButton@ToggleButton>:
    font_size: 36
    group: 'target'
