#:kivy 1.8.0

#:set window_x 300
#:set window_y 400


<NumberButton@Button>:
    font_size: 36
    width: window_x / 3
    height: window_y / 6


<PrototypeWidget>:
    number_display: number_display

    TextInput:
        id: number_display
        width: window_x
        height: window_y * 1 / 5
        center_y: root.top - self.height
        text_size: self.size
        halign: 'left'
        valign: 'top'
        font_size: 36
        text: ''

    NumberButton:
        id: number_button_1
        text: '1'
        on_press: root.input_number(number_button_1)

    NumberButton:
        id: number_button_2
        text: '2'
        center_x: root.width / 2
        on_press: root.input_number(number_button_2)

    NumberButton:
        id: number_button_3
        text: '3'
        center_x: root.width * 5 / 6
        on_press: root.input_number(number_button_3)

    NumberButton:
        id: number_button_4
        text: '4'
        center_y: root.height / 4
        on_press: root.input_number(number_button_4)

    NumberButton:
        id: number_button_5
        text: '5'
        center_x: root.width / 2
        on_press: root.input_number(number_button_5)
        center_y: root.height / 4

    NumberButton:
        id: number_button_6
        text: '6'
        center_x: root.width * 5 / 6
        center_y: root.height / 4
        on_press: root.input_number(number_button_6)

    NumberButton:
        id: number_button_7
        text: '7'
        center_y: root.height * 5 / 12
        on_press: root.input_number(number_button_7)

    NumberButton:
        id: number_button_8
        text: '8'
        center_x: root.width / 2
        center_y: root.height * 5 / 12
        on_press: root.input_number(number_button_8)

    NumberButton:
        id: number_button_9
        text: '9'
        center_x: root.width * 5 / 6
        center_y: root.height * 5 / 12
        on_press: root.input_number(number_button_9)

    NumberButton:
        id: number_button_b
        text: 'B'
        center_x: root.width / 2
        center_y: root.height * 7 / 12
        on_press: root.backspace()

    NumberButton:
        id: number_button_c
        text: 'C'
        center_x: root.width * 5 / 6
        center_y: root.height * 7 / 12
        on_press: root.clear()
